{
  "expo": {
    "name": "MindBase",
    "slug": "mindbase",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "mindbase",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f0f1a"
    },
    "plugins": [
      "expo-router",
      [
        "expo-share-intent",
        {
          "ios": {
            "activationRules": {
              "NSExtensionActivationSupportsWebURLWithMaxCount": 1,
              "NSExtensionActivationSupportsText": true,
              "NSExtensionActivationSupportsWebPageWithMaxCount": 1
            }
          },
          "android": {
            "intentFilters": [
              {
                "action": "SEND",
                "data": {
                  "mimeType": "text/plain"
                }
              },
              {
                "action": "SEND",
                "data": {
                  "mimeType": "text/*"
                }
              },
              {
                "action": "SEND",
                "data": {
                  "mimeType": "image/*"
                }
              },
              {
                "action": "SEND",
                "data": {
                  "mimeType": "video/*"
                }
              },
              {
                "action": "SEND",
                "data": {
                  "mimeType": "*/*"
                }
              },
              {
                "action": "SEND_MULTIPLE",
                "data": {
                  "mimeType": "*/*"
                }
              }
            ]
          }
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mindbase.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f0f1a"
      },
      "package": "com.mindbase.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "4947fa25-ff37-484e-9e00-f8f60be09887"
      }
    }
  }
}